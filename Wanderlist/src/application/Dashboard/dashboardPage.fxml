<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane minHeight="-Infinity" minWidth="-Infinity" prefHeight="600.0" prefWidth="960.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.Dashboard.DashboardController">
   <center>
      <VBox prefHeight="200.0" prefWidth="100.0" BorderPane.alignment="CENTER">
         <children>
            <ScrollPane prefHeight="550.0" prefWidth="960.0">
               <content>
                  <VBox prefHeight="450.0" prefWidth="843.0" spacing="20.0">
                     <children>
                        <Button fx:id="btnAdd" mnemonicParsing="false" onAction="#addAction" prefHeight="30.0" prefWidth="80.0" text="Add Trip" />
                        <Label text="Upcoming Trips">
                           <font>
                              <Font name="Arial Bold" size="24.0" />
                           </font>
                        </Label>
                        <VBox fx:id="vboxUpcomings" prefHeight="200.0" prefWidth="100.0" />
                        <Label layoutX="10.0" layoutY="10.0" text="Past Trips">
                           <font>
                              <Font name="Arial Bold" size="24.0" />
                           </font>
                        </Label>
                        <VBox fx:id="vboxPast" layoutX="10.0" layoutY="103.0" prefHeight="200.0" prefWidth="100.0" />
                     </children>
                  </VBox>
               </content>
               <padding>
                  <Insets bottom="50.0" left="50.0" right="50.0" top="50.0" />
               </padding>
            </ScrollPane>
         </children>
      </VBox>
   </center>
   <top>
      <HBox alignment="CENTER" prefHeight="50.0" prefWidth="200.0" BorderPane.alignment="CENTER">
         <children>
            <Label fx:id="labelGreet" text="Hi, UserName!">
               <font>
                  <Font name="Arial Bold" size="24.0" />
               </font>
            </Label>
            <Pane prefHeight="200.0" prefWidth="200.0" HBox.hgrow="ALWAYS" />
            <Button fx:id="btnLogOut" mnemonicParsing="false" onAction="#handleButtonLogout" prefHeight="30.0" prefWidth="80.0" text="Log Out" />
         </children>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
      </HBox>
   </top>
</BorderPane>
